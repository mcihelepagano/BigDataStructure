{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Product": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "brand": { "type": "string" },
          "description": { "type": "longstring" },
          "image_url": { "type": "string" },
          "price": { "type": "number" },
          "currency": { "type": "string" },
          "vat_rate": { "type": "number" }
        }
      }
    },
    "Stock": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "product_id": { "type": "string" },
          "warehouse_id": { "type": "string" },
          "quantity": { "type": "integer" },
          "location": { "type": "string" }
        }
      }
    },
    "Warehouse": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "address": { "type": "string" },
          "capacity": { "type": "integer" }
        }
      }
    },
    "OrderLine": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "product_id": { "type": "string" },
          "client_id": { "type": "string" },
          "date": { "type": "date" },
          "deliveryDate": { "type": "date" },
          "quantity": { "type": "integer" },
          "comment": { "type": "longstring" },
          "grade": { "type": "integer" }
        }
      }
    },
    "Client": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "ln": { "type": "string" },
          "fn": { "type": "string" },
          "address": { "type": "string" },
          "nationality": { "type": "string" },
          "birthDate": { "type": "date" },
          "email": { "type": "string" }
        }
      }
    }
  }
}
