{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",

  "properties": {

    "Product": {
      "type": "object",
      "properties": {
        "IDP":        { "type": "integer" },
        "name":       { "type": "string" },
        "brand":      { "type": "string" },
        "description":{ "type": "string", "format": "longstring" },
        "image_url":  { "type": "string" },

        "price": {
          "type": "object",
          "properties": {
            "amount":   { "type": "integer" },
            "currency": { "type": "string" },
            "vat_rate": { "type": "integer" }
          },
          "required": ["amount", "currency", "vat_rate"]
        },

        "categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" }
            },
            "required": ["title"]
          }
        },

        "supplier": {
          "type": "object",
          "properties": {
            "IDS":        { "type": "integer" },
            "name":       { "type": "string" },
            "SIRET":      { "type": "string" },
            "headOffice": { "type": "string" },
            "revenue":    { "type": "integer" }
          },
          "required": ["IDS", "name", "SIRET", "headOffice", "revenue"]
        }
      },
      "required": [
        "IDP", "name", "brand", "description", "image_url",
        "price", "categories", "supplier"
      ]
    },


    "Stock": {
      "type": "object",
      "properties": {
        "IDP":      { "type": "integer" },
        "IDW":      { "type": "integer" },
        "quantity": { "type": "integer" },
        "location": { "type": "string" }
      },
      "required": ["IDP", "IDW", "quantity", "location"]
    },


    "Warehouse": {
      "type": "object",
      "properties": {
        "IDW":      { "type": "integer" },
        "address":  { "type": "string" },
        "capacity": { "type": "integer" }
      },
      "required": ["IDW", "address", "capacity"]
    },


    "OrderLine": {
      "type": "object",
      "properties": {
        "IDP":          { "type": "integer" },
        "IDC":          { "type": "integer" },
        "date":         { "type": "string", "format": "date" },
        "deliveryDate": { "type": "string", "format": "date" },
        "quantity":     { "type": "integer"},
        "comment":      { "type": "string","format": "longstring" },
        "grade":        { "type": "integer" }
      },
      "required": ["IDP", "IDC", "date", "deliveryDate", "quantity", "comment", "grade"]
    },


    "Client": {
      "type": "object",
      "properties": {
        "IDC":        { "type": "integer" },
        "ln":         { "type": "string" },
        "fn":         { "type": "string" },
        "address":    { "type": "string" },
        "nationality":{ "type": "string" },
        "birthDate":  { "type": "string", "format": "date" },
        "email":      { "type": "string" }
      },
      "required": ["IDC", "ln", "fn", "address", "nationality", "birthDate", "email"]
    }
  },

  "required": ["Product", "Stock", "Warehouse", "OrderLine", "Client"]
}
