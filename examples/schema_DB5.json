{
  "type": "object",
  "properties": {

    "Product": {
      "type": "object",
      "properties": {
        "IDP":        { "type": "string" },
        "name":       { "type": "string" },
        "brand":      { "type": "string" },
        "description":{ "type": "string" },
        "image_url":  { "type": "string" },

        "price": {
          "type": "object",
          "properties": {
            "amount":   { "type": "number" },
            "currency": { "type": "string" },
            "vat_rate": { "type": "number" }
          }
        },

        "categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" }
            }
          }
        },

        "supplier": {
          "type": "object",
          "properties": {
            "IDS":        { "type": "string" },
            "name":       { "type": "string" },
            "SIRET":      { "type": "string" },
            "headOffice": { "type": "string" },
            "revenue":    { "type": "number" }
          }
        },

        "orderLines": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "IDP":         { "type": "string" },
              "IDC":         { "type": "string" },
              "date":        { "type": "string", "format": "date" },
              "deliveryDate":{ "type": "string", "format": "date" },
              "quantity":    { "type": "integer" },
              "comment":     { "type": "string" },
              "grade":       { "type": "integer" }
            }
          }
        }
      }
    },

    "Stock": {
      "type": "object",
      "properties": {
        "IDP":      { "type": "string" },
        "IDW":      { "type": "string" },
        "quantity": { "type": "integer" },
        "location": { "type": "string" }
      },
      "required": ["IDP", "IDW", "quantity", "location"]
    },


    "Warehouse": {
      "type": "object",
      "properties": {
        "IDW":      { "type": "string" },
        "address":  { "type": "string" },
        "capacity": { "type": "integer" }
      },
      "required": ["IDW", "address", "capacity"]
    },
    
    "Client": {
      "type": "object",
      "properties": {
        "IDC":        { "type": "string" },
        "ln":         { "type": "string" },
        "fn":         { "type": "string" },
        "address":    { "type": "string" },
        "nationality":{ "type": "string" },
        "birthDate":  { "type": "string", "format": "date" },
        "email":      { "type": "string" }
      },
      "required": ["IDC", "ln", "fn", "address", "nationality", "birthDate", "email"]
    }
  }
}
