{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product",
  "type": "object",
  "properties": {
    "_id": { "type": "string" },
    "name": { "type": "string" },
    "brand": { "type": "string" },
    "description": { "type": "string" },
    "image_url": { "type": "string", "format": "uri" },

    "price": {
      "type": "object",
      "properties": {
        "amount": { "type": "number" },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "vat_rate": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["amount", "currency", "vat_rate"]
    },

    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category_id": { "type": "string" },
          "title": { "type": "string" }
        },
        "required": ["category_id", "title"]
      },
      "minItems": 1
    },

    "supplier": {
      "type": "object",
      "properties": {
        "supplier_id": { "type": "string" },
        "name": { "type": "string" },
        "SIRET": { "type": "string", "pattern": "^[0-9]{14}$" },
        "headOffice": { "type": "string" },
        "revenue": { "type": "number", "minimum": 0 }
      },
      "required": ["supplier_id", "name", "SIRET", "headOffice", "revenue"]
    },

    "stock": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "warehouse_id": { "type": "string" },
          "location": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 0 }
        },
        "required": ["warehouse_id", "location", "quantity"]
      }
    },

    "orders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "order_date": { "type": "string", "format": "date" },
          "delivery_date": { "type": "string", "format": "date" },
          "quantity": { "type": "integer", "minimum": 1 },
          "comment": { "type": "string" },
          "grade": { "type": "integer", "minimum": 1, "maximum": 5 },
          "client": {
            "type": "object",
            "properties": {
              "client_id": { "type": "string" },
              "ln": { "type": "string" },
              "fn": { "type": "string" },
              "address": { "type": "string" },
              "nationality": { "type": "string" },
              "birthDate": { "type": "string", "format": "date" },
              "email": { "type": "string", "format": "email" }
            },
            "required": ["client_id", "ln", "fn", "address", "nationality", "birthDate", "email"]
          }
        },
        "required": ["order_date", "delivery_date", "quantity", "comment", "grade", "client"]
      }
    }
  },
  "required": [
    "_id",
    "name",
    "brand",
    "description",
    "image_url",
    "price",
    "categories",
    "supplier",
    "stock",
    "orders"
  ]
}
